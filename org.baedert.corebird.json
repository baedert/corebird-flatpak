{
  "app-id": "org.baedert.corebird",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.20",
  "sdk" : "org.gnome.Sdk",
  "strip" : false,
  "command" : "corebird",
  "finish-args" : [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=host",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
  ],
  "build-options" : {
    "cflags" : "-O2 -g"
  },
  "modules" : [
    {
      "name" : "librest",
      "sources" : [
        {
          "type"   : "git",
          "url"    : "git://git.gnome.org/librest.git"
        }
      ]
    },
    {
      "name" : "corebird",
      "config-opts" : ["--enable-debug", "--disable-video"],
      "sources" : [
        {
          "type"   : "git",
          "url"    : "https://github.com/baedert/corebird",
          "branch" : "master"
        }
      ]
    }
  ]
}
