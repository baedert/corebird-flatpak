{
  "app-id": "org.baedert.corebird",
  "branch": "stable",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.22",
  "sdk" : "org.gnome.Sdk",
  "strip" : false,
  "command" : "corebird",
  "rename-icon" : "corebird",
  "copy-icon" : true,
  "finish-args" : [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--filesystem=host",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
  ],
  "build-options" : {
    "cflags" : "-O2 -g"
  },
  "cleanup" : [
    "/include", "/share/gir-1.0",
    "/lib/pkgconfig", "/lib/girepository-1.0"
  ],
  "modules" : [
    {
      "name" : "librest",
      "sources" : [
        {
          "type"   : "git",
          "url"    : "git://git.gnome.org/librest.git",
          "branch" : "librest-0-7"
        }
      ]
    },
    {
      "name" : "corebird",
      "sources" : [
        {
          "type"   : "git",
          "url"    : "https://github.com/baedert/corebird",
          "branch" : "cb-1.3"
        }
      ]
    }
  ]
}
