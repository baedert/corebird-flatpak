{
  "app-id": "org.baedert.corebird",
  "branch": "master",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk" : "org.gnome.Sdk",
  "strip" : false,
  "command" : "corebird",
  "rename-icon" : "corebird",
  "copy-icon" : true,
  "tags" : ["nightly"],
  "desktop-file-name-prefix": "(Nightly) ",
  "finish-args" : [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--filesystem=host",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
  ],
  "build-options" : {
    "cflags" : "-O0 -g"
  },
  "cleanup" : [
    "/include", "/share/gir-1.0",
    "/lib/pkgconfig", "/lib/girepository-1.0"
  ],
  "modules" : [
    {
      "name" : "gst-libav",
      "config-opts" : ["--with-libav-extra-configure='--disable-yasm'"],
      "sources" : [
        {
          "type"   : "git",
          "url"    : "git://anongit.freedesktop.org/gstreamer/gst-libav",
          "branch" : "1.8"
        }
      ]
    },
    {
      "name" : "librest",
      "sources" : [
        {
          "type"   : "git",
          "url"    : "git://git.gnome.org/librest.git",
          "branch" : "librest-0-7"
        }
      ]
    },
    {
      "name" : "gspell",
      "sources" : [
        {
          "type"   : "git",
          "url"    : "git://git.gnome.org/gspell.git",
          "branch" : "gspell-1-2"
        },
        {
          "type" : "patch",
          "path" : "0010-Add-generated-vapi-file.patch"
        }
      ]
    },
    {
      "name" : "corebird",
      "config-opts" : ["-Ddebug=true"],
      "buildsystem" : "meson",
      "builddir" : true,
      "sources" : [
        {
          "type"   : "git",
          "url"    : "https://github.com/baedert/corebird",
          "branch" : "master"
        }
      ]
    }
  ]
}
